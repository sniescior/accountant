<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account settings</title>
    <%- include('../partials/_global_styles.ejs') %>
    <link rel="stylesheet" href="/public/styles/app/app.css">
</head>
<body>
    <div class="app-container" id="appContainer">
        <div class="header">
            <div class="title mt-3">
                <img src="../../public/images/user.jpg" alt="">
                <h2><%- user.username %></h2>
                <h3><%- user.email %></h3>
                <button class="bt-primary my-2">
                    Edit profile
                    <span class="arrow-right"></span>
                </button>
            </div>
        </div>
        <div class="section-divider">
            <h6>
                GENERAL MANAGEMENT
            </h6>
        </div>
        <section class="settings-section">
            <ul class="section-list">
                <a class="menu-link" href="#configuration" onclick="toggleNestedMenu('configuration')" id="configuration-link"><li>
                    <div>
                        <i class="bi bi-gear me-2" width="16" height="16"></i>Configuration
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </li></a>
                <a class="menu-link" href="#accounts" onclick="toggleNestedMenu('accounts')" id="accounts-link"><li>
                    <div>
                        <i class="bi bi-credit-card-2-back me-2"></i>Accounts
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </li></a>
                <a class="menu-link" href="#plan" onclick="toggleNestedMenu('plan')" id="plam-link"><li>
                    <div>
                        <i class="bi bi-award me-2"></i>
                        Plan
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </li></a>
                <a class="menu-link" href="#security" onclick="toggleNestedMenu('security')" id="security-link"><li>
                    <div>
                        <i class="bi bi-shield-lock me-2"></i>Security
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </li></a>
            </ul>
        </section>
        <div class="section-divider">
            <h6>
                PREFERENCES
            </h6>
        </div>
        <section class="settings-section">
            <ul class="section-list">
                <li>
                    <p onclick="toggleButton('dark-mode')">
                        <i class="bi bi-moon me-2"></i>
                        Dark Mode
                    </p>
                    <button class="bt-toggle active" id="dark-mode" onclick="toggleButton(this.id)">
                        <div class="circle"></div>
                    </button>
                </li>
                <li>
                    <p onclick="toggleButton('notifications')">
                        <i class="bi bi-bell me-2"></i>
                        Notifications
                    </p>
                    <button class="bt-toggle active" id="notifications" onclick="toggleButton(this.id)">
                        <div class="circle"></div>
                    </button>
                </li>
                <a class="menu-link" href="#language" onclick="toggleNestedMenu('language')" id="language-link">
                    <li>
                        <div>
                            <i class="bi bi-translate me-2"></i>
                            Language
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </li>
                </a>
            </ul>
        </section>
        <div class="section-divider">
            <h6>MORE</h6>
        </div>
        <section class="settings-section">
            <ul class="section-list">
                <a class="menu-link" href="#">
                    <li>
                        <div>
                            <i class="bi bi-phone me-2"></i>
                            Get Mobile App
                        </div>
                    </li>
                </a>
                <a class="menu-link" href="#">
                    <li>
                        <div>
                            <i class="bi bi-star me-2"></i>Feedback
                        </div>
                    </li>
                </a>
                <a class="menu-link" href="#">
                    <li>
                        <div>
                            <i class="bi bi-cup-hot me-2"></i>
                            Buy me a coffee
                        </div>
                    </li>
                </a>
            </ul>
        </section>
    </div>

    <%- include('../partials/_configuration.ejs') %>
    <%- include('../partials/_security.ejs') %>
    <%- include('../partials/_accounts.ejs') %>
    <%- include('../partials/_plan.ejs') %>
    <%- include('../partials/_language.ejs') %>
    
    <script src="../../public/js/app.js" type="text/javascript"></script>
</body>
</html>