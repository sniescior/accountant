<div class="container active" id="configuration-income-categories" role="tabpanel">
    <div class="breadcrumbs">
        <a onclick="setTab(this, 'configuration')">Configuration</a>
        <i class="bi bi-chevron-right"></i>
        <a class="disabled">
            Income Categories
        </a>
    </div>
    <div class="content-title">
        <h2>Income Categories</h2>
        <button class="button-primary" onclick="openModal('add-income-category-modal')">Add income category</button>
    </div>

    <div class="configuration-section">
        <% if (context.incomeCategories.length < 1) { %>
            <div class="no-data-wrapper">
                <img class="no-data-image" src="/public/images/nodata.svg" alt="No data available">
                <h3>No categories</h3>
            </div>
        <% } else { %>
            <ul class="configuration-list">
                <div class="legend">
                    Name
                </div>
                <% context.incomeCategories.forEach(incomeCategory => { %>
                    <li>
                        <h3><%= incomeCategory.name %></h3>
                        <div class="button-wrapper">
                            <button class="context-menu-button"><i class="bi bi-pencil"></i></button>
                            <button class="context-menu-button danger" onclick="openModal('delete-<%= incomeCategory.id %>')"><i class="bi bi-trash3"></i></button>
                        </div>
                    </li>
                    <span class="divider"></span>
                <% }) %>
                <div class="configuration-list-footer"></div>
            </ul>
        <% } %>
    </div>
</div>

<% context.incomeCategories.forEach(incomeCategory => { %>
    <div class="modal" id="delete-<%= incomeCategory.id %>">
        <div class="modal-header flex-column">
            <h2>Delete category? <%= incomeCategory.name %></h2>
            <h3>And every transactions associated with it?</h3>
        </div>
        
        <form action="/app/settings/delete/income-category" method="POST" class="modal-body">
            <input type="hidden" value="<%= incomeCategory.id %>" name="categoryID">
            <div class="form-footer">
                <div class="button-wrapper">
                    <button class="button-secondary grey" type="button" onclick="closeModals()">Cancel</button>
                    <button class="button-primary button-danger" type="submit">Delete</button>
                </div>
            </div>
        </form>
    </div>
<% }) %>

<div class="modal" id="add-income-category-modal">
    <div class="modal-header">
        <h2>Add income category</h2>
    </div>
    
    <form action="/app/settings/add/income-category" method="POST" class="modal-body">
        <div class="form-body">
            <div class="input-wrapper">
                <input type="text" placeholder="Category name" name="categoryName" required>
            </div>
        </div>
        <div class="form-footer">
            <div class="button-wrapper">
                <button class="button-secondary" type="button" onclick="closeModals()">Cancel</button>
                <button class="button-primary" type="submit">Save</button>
            </div>
        </div>
    </form>
</div>